{
    "swagger": "2.0",
    "host": "127.0.0.1:8000",
    "basePath": "/api/food_management_auth_app/",
    "info": {
        "version": "1.0.0",
        "title": "Simple API",
        "description": "A simple API to learn how to write OpenAPI Specification"
    },
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users"
            },
            "type": "oauth2"
        }
    },
    "security": [],
    "definitions": {},
    "parameters": {
        "LoginParameters": {
            "description": "login_parameters",
            "name": "login_parameters",
            "in": "body",
            "schema": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "username",
                    "password"
                ]
            }
        }
    },
    "responses": {
        "ErrorMessagesForLoginResponses": {
            "description": "error messages",
            "schema": {
                "type": "string",
                "enum": ["INVALID_PASSWORD", "INVALID_USERNAME"]
            }
        },
        "LoginResponse": {
            "description": "success resopnse",
            "schema": {
                "type": "object",
                "properties": {
                    "user_id": {
                        "type": "string"
                    },
                    "access_token": {
                        "type": "string"
                    },
                    "is_admin": {
                        "type": "boolean"
                    }
                }
            }
        }
    },
    "paths": {
        "/login/v1/": {
            "post": {
                "operationId": "login_page",
                "description": "login to a page",
                "summary": "login with username, password",
                "security": [],
                "parameters": [{
                    "$ref": "#/parameters/LoginParameters"
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/LoginResponse"
                    },
                    "404": {
                        "$ref": "#/responses/ErrorMessagesForLoginResponses"
                    }
                }
            }
        }
    }
}
